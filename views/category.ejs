<%- include("partials/header") -%>

<!-- Page Icon showing witch animal is being searched -->

<form action="/" method="post">
  <button type="submit" name="name" value="homePage" class="fas fa-<%= data.Animal %> fa-7x"></button>
</form>

<form action="/category" method="post">
  <input class="catInput" id="weightInput" type="number" name="weight" placeHolder="<%= data.weight %>" onchange="this.form.submit();">
</form>
<!-- Category Dropdown -->

<div class="dropdown show">
  <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= data.categoryTitle %>
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

    <% data.categories.forEach(function(category){ %>
    <a class="dropdown-item" href="/<%= category %>">
      <%= category %></a>
    <% }); %>

  </div>
</div>

<div class="list-group">
  <% data.subCategory.forEach(function(category){ %>
  <a class="list list-group-item list-group-flush list-group-item-action" href="/<%= data.categoryTitle %>/<%= category %>">
    <%= category %></a>
  <% }); %>

</div>

<!-- End of HTML -->
</div>

<!-- Local Scripts -->

<script src="/jquery/jquery.js"></script>
<script src="script.js" charset="utf-8"></script>

